<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_blue_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="game.prateek.pong2d.GameActivity">

    <TextView
        android:id="@+id/tvVsAI"
        android:layout_width="97dp"
        android:layout_height="49dp"
        android:layout_below="@+id/imageView3"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:layout_toLeftOf="@+id/tvVsPlayer"
        android:layout_toStartOf="@+id/tvVsPlayer"
        android:gravity="center"
        android:text="@string/vs_ai"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="183dp" />

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/settings"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:id="@+id/tvVsPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvVsAI"
        android:layout_toLeftOf="@+id/ivSettings"
        android:layout_toStartOf="@+id/ivSettings"
        android:text="Vs Player"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/pong2d"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
